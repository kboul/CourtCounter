<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!-- Remove AppTitle -->
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <style name="main_relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="teamALayout">
        <!-- Setting the width of both children Layouts to 0 and the weight to 1 gives the expected equal comparison -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="teamBLayout">
        <!-- Setting the width of both children Layouts to 0 and the weight to 1 gives the expected equal comparison -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="teamATitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/titlePadding</item>
        <item name="android:text">@string/teamATitle</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/teamName</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="teamBTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/titlePadding</item>
        <item name="android:text">@string/teamBTitle</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/teamName</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="teamAScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/scorePaddingBottom</item>
        <item name="android:text">@string/teamAScore</item>
        <item name="android:textSize">@dimen/scoreTextSize</item>
        <item name="android:textColor">@color/teamScore</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="teamBScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/scorePaddingBottom</item>
        <item name="android:text">@string/teamBScore</item>
        <item name="android:textSize">@dimen/scoreTextSize</item>
        <item name="android:textColor">@color/teamScore</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="threePoints2TeamA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/pointsMarginBottom</item>
        <item name="android:onClick">score</item>
        <item name="android:text">@string/threePoints</item>
        <item name="android:tag">3_A</item>
    </style>

    <style name="threePoints2TeamB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/pointsMarginBottom</item>
        <item name="android:onClick">score</item>
        <item name="android:text">@string/threePoints</item>
        <item name="android:tag">3_B</item>
    </style>

    <style name="twoPoints2TeamA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/pointsMarginBottom</item>
        <item name="android:onClick">score</item>
        <item name="android:text">@string/twoPoints</item>
        <item name="android:tag">2_A</item>
    </style>

    <style name="twoPoints2TeamB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/pointsMarginBottom</item>
        <item name="android:onClick">score</item>
        <item name="android:text">@string/twoPoints</item>
        <item name="android:tag">2_B</item>
    </style>

    <style name="freeThrow2TeamA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/pointsMarginBottom</item>
        <item name="android:onClick">score</item>
        <item name="android:text">@string/freeThrow</item>
        <item name="android:tag">1_A</item>
    </style>

    <style name="freeThrow2TeamB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/pointsMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/pointsMarginBottom</item>
        <item name="android:onClick">score</item>
        <item name="android:text">@string/freeThrow</item>
        <item name="android:tag">1_B</item>
    </style>

    <style name="resetScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/resetMarginBottom</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:onClick">resetScore</item>
        <item name="android:text">@string/resetScore</item>
    </style>

    <style name="line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/lineMarginTop</item>
        <item name="android:background">@color/line</item>
    </style>
</resources>
